{
  "$schema": "https://charm.land/crush.json",
  "lsp": {
    "go": {
      "command": "gopls"
    },
    "typescript": {
      "command": "typescript-language-server",
      "args": [
        "--stdio"
      ]
    },
    "nix": {
      "command": "nil"
    },
    "ruby": {
      "command": "ruby-lsp"
    }
  },
  "permissions": {
    "allowed_tools": [
      "cat",
      "view",
      "ls",
      "grep"
    ]
  }
}